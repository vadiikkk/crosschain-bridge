{
  "name": "bridge-relayer",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/relayer.ts",
    "start": "node --enable-source-maps dist/relayer.js",
    "build": "tsc -p tsconfig.json",
    "env:local": "shx cp .env.local .env",
    "env:testnet": "shx cp .env.testnet .env",
    "relayer:local": "npm run env:local && npm run dev",
    "relayer:testnet": "npm run env:testnet && npm run dev"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "dotenv-cli": "^7.4.2",
    "shx": "^0.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
